    <div class='default-container'>
        <h3>Formul√°rio de Registro</h3>
        <form class='form-container' method='post' action='/register'>
            <div class='form-item'>
                <label for='name'>Nome</label>
                <input id='name' type='text' name='name' placeholder='Nome' />
            </div>
            <div class='form-item'>
                <label for='email'>E-mail</label>
                <input id='email' type='text' name='email' placeholder='E-mail' />        
            </div>
            <div class='form-item'>
                <label for='CNPJ'>CNPJ</label>
                <input id='cnpj' type='text' name='cnpj' placeholder='CNPJ' />        
            </div>
            <div class='form-item'>
                <label for='password'>Senha</label>
                <input id='password' type='password' name='password' placeholder='Senha' />
            </div>
            <button type='submit' class='default-container-button'>Finalizar Registro</button>
        </form>
    </div>

